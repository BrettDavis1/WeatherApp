<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="75dp"
    android:layout_height="100dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_time"
        tools:text="XAM"
        android:gravity="center"
        android:textAppearance="?textAppearanceBody1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_rain"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rain"
        android:gravity="center"
        android:textColor="?colorSecondaryVariant"
        android:textAppearance="?textAppearanceBody1"
        tools:text="XX%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sv_cloud"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sv_cloud"
        tools:text="cloud type"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_rain"
        app:layout_constraintBottom_toTopOf="@id/tv_degree"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_degree"
        android:gravity="center"
        android:textAppearance="?textAppearanceBody1"
        tools:text="45"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sv_cloud"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>