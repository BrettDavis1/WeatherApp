<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_day"
        android:textAppearance="?textAppearanceBody1"
        tools:text="Wednesday"
        android:layout_width="200dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sv_cloud"/>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sv_cloud"
        android:src="@drawable/ic_launcher_foreground"
        tools:text="cloud"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/tv_day"
        app:layout_constraintEnd_toStartOf="@id/tv_rain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_rain"
        android:gravity="center"
        android:textColor="?colorSecondaryVariant"
        android:textAppearance="?textAppearanceBody1"
        tools:text="XX%"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/sv_cloud"
        app:layout_constraintEnd_toStartOf="@id/tv_high"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_high"
        tools:text="XX"
        android:gravity="center"
        android:textAppearance="?textAppearanceBody1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/tv_rain"
        app:layout_constraintEnd_toStartOf="@id/tv_low"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_low"
        tools:text="XX"
        android:paddingStart="25dp"
        android:textAppearance="?textAppearanceBody1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/tv_high"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>